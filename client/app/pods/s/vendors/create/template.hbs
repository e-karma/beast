<form class="form-horizontal" {{action 'createVendor' on='submit'}}>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Company Name</label>
        <div class="col-sm-10">
            {{input value=model.name class="form-control" placeholder="Company Name"}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            {{input value=model.description class="form-control" placeholder="Describe the business"}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Address</label>
        <div class="col-sm-10">
            {{input value=model.address class="form-control" placeholder="Enter Business Address"}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">City</label>
        <div class="col-sm-4">
            {{input value=model.address class="form-control" placeholder="Enter City"}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">State</label>
        <div class="col-sm-4">
            {{input value=model.address class="form-control" placeholder="Enter Business Address"}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Zip Code</label>
        <div class="col-sm-4">
            {{input value=model.address class="form-control" placeholder="Zip"}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Phone Number</label>
        <div class="col-sm-4">
            {{input value=model.address class="form-control" placeholder="Enter Business Address"}}
        </div>
    </div>
    <button class="btn rb-btn-info" {{action 'createVendor' model}}>Create Vendor</button>
    <button class="btn rb-btn-info" {{action 'cancel' model}}>Cancel</button>
</form>
